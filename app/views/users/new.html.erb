<h1> Sign up! </h1>

<%= form_for (@user) do |f| %>
    
    <div class="form-group">
        <div class="row">
            <div class='col-md-4'>
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
                
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control" %>
                
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %><br>
                
                <%= f.submit "Sign Up", class: 'btn' %>
            </div>
        </div>
    </div>
    
<% end %>
   